with "ncursesada";

project Rocker is
   for Source_Dirs use ("src");
   for Object_Dir use "obj";
   for Exec_Dir use "dest";
   for Main use ("main.adb");
   for Languages use ("Ada");

   package Builder is
      for Executable ("main.adb") use "rocker";
   end Builder;

   package Compiler is
      for Default_Switches ("Ada") use ("-gnat2022", "-gnatwa", "-g");
   end Compiler;

   package Linker is
      for Default_Switches ("Ada") use ("-lncurses");
   end Linker;
end Rocker;
